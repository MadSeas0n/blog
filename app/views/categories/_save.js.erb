$("ul.errors").html("")
<% if @category.errors.any? %>
	<% @category.errors.full_messages.each do |message| %>
	$("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
	<% end %>
<% else %>
    $(".cat-index").html("<%= escape_javascript(render 'cat_index') %>")
    $("#cat-modal").modal("hide")
<% end %>    