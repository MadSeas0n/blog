<%= form_for @category, remote: true, html: {class: "form-horizontal", style: "display:inline"} do |f| %>
  <div class="modal-body">
    <ul class="errors"></ul>

    <div class="control-group">
      <%= f.label :cat_name, class: "control-label" %>
      <div class="controls">
      <%= f.text_field :cat_name %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :cat_description, class: "control-label" %>
      <div class="controls">
      <%= f.text_area :cat_description %>
      </div> 
    </div>
  </div>
  <div class="modal-footer">
  	<%= f.submit calss: "btn btn-primary" %>
    <%= link_to "Cancel", '#', class: "btn", data: {dismiss: "modal"} %>
  </div>
  <% end %>