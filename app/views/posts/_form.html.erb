<%= form_for @post, remote: true, html: {class: "form-horizontal", style: "display:inline"} do |f| %>
  <div class="modal-body">
    <ul class="errors"></ul>

    <div class="control-group">
      <%= f.label :author, class: "control-label" %>
      <div class="controls">
      <%= f.text_field :author %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :title, class: "control-label" %>
      <div class="controls">
      <%= f.text_field :title %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :body, class: "control-label" %>
      <div class="controls">
      <%= f.text_area :body %>
      </div> 
    </div>
  </div>
  <div class="modal-footer">
  	<%= f.submit calss: "btn btn-primary" %>
    <%= link_to "Cancel", '#', class: "btn", data: {dismiss: "modal"} %>
  </div>
  <% end %>