<div class="container">
<div class="well">
    
    <%= link_to "New Post", new_post_path, remote: true, class: "btn btn-primary" %>
    <%= link_to "Category Manager", categories_path, class: "btn btn-primary" %>
   
</div>
<div class="new-post"></div>

<table class="table table-bordered table-striped">
  <thead>
  	<tr>
  		<th>Author</th>
      <th>Title</th>
  		<th>Body</th>
      <th>Rating</th>
      <th>Category</th>
  		<th>&nbsp;</th>
  		<th>&nbsp;</th>
    </tr>
  </thead>
  <tbody class="post-index">
  	<%= render 'index' %>
  </tbody>
</table>
</div>
<div id="post-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="modal-header" aria-hidden="true"></div>