<%= form_for([@post, @post.comments.build], remote: true) do |f| %>

<div class="control-group">
<%= f.label 'Author' %><br>
<%= f.text_field :c_author %>
</div>

<div class="control-group">
<%= f.label 'Comment' %><br>
<%= f.text_area :c_body %>
</div><br>

<div class="control-group">
<%= f.submit 'Add Comment', class: "btn btn-primary" %>
</div>

<% end %>
